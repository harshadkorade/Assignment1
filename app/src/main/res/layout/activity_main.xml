<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Enter First No" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:padding="3dp"
        android:id="@+id/lblno1"
        android:height="35dp"
        android:width="150dp"
        android:textStyle="bold"
        android:textSize="15dp"
       />

    <TextView
        android:text="Enter Second No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:padding="3dp"
        android:id="@+id/lblno2"
        android:height="35dp"
        android:width="150dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/lblno1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lblno1"
        android:layout_alignEnd="@+id/lblno1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtno1"
        android:layout_alignTop="@+id/lblno1"
        android:layout_toRightOf="@+id/lblno1"
        android:layout_toEndOf="@+id/lblno1"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtno2"
        android:layout_alignTop="@+id/lblno2"
        android:layout_alignLeft="@+id/txtno1"
        android:layout_alignStart="@+id/txtno1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnadd"
        android:layout_below="@+id/txtno2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblresult"
        android:layout_alignBottom="@+id/btnadd"
        android:layout_alignLeft="@+id/txtno2"
        android:layout_alignStart="@+id/txtno2"
        android:width="200dp"
        android:height="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/txtno2"
        android:layout_alignRight="@+id/btnadd"
        android:layout_alignEnd="@+id/btnadd"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />

</RelativeLayout>
